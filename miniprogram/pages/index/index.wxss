/**index.wxss**/
.item-container {
  display: flex;
}

.image {
  width: 300rpx;
  height: 150rpx;
  flex: 1;
}

.title {
  font-weight: bold;
}

.action {
  flex: 1;
}

.tag {
  padding: 0 5rpx;
  background: #EA5149;
  border-radius: 20%;
  margin: 5rpx;
  color: white;
  font-size: 20rpx;
}

.wish{
  padding: 5rpx;
  background: #EA5149;
  border-radius: 50%;
  color:white;
  width: 50rpx;
}

.thumb-class{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
}
.floatBtn{
  display: flex;
  padding-top: 200px;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  flex-direction: row;
}

.content{
  flex: 2;
  display: flex;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  flex-direction: row;
}